{
  "type": "object",
  "properties": {
    "personal": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "en": {
              "type": "string"
            },
            "hu": {
              "type": "string"
            }
          },
          "required": ["en", "hu"],
          "additionalProperties": false
        },
        "title": {
          "$ref": "#/properties/personal/properties/name"
        },
        "picture": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "platform": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              }
            },
            "required": ["platform", "url", "icon"],
            "additionalProperties": false
          }
        },
        "contact": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["location", "phone", "email", "link"]
              },
              "value": {
                "type": "string"
              }
            },
            "required": ["type", "value"],
            "additionalProperties": false
          }
        }
      },
      "required": ["name", "title", "picture", "links", "contact"],
      "additionalProperties": false
    },
    "workExperience": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "$ref": "#/properties/personal/properties/name"
          },
          "company": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "link": {
                "type": "string"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          "employmentType": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "end": {
            "type": "string"
          },
          "description": {
            "$ref": "#/properties/personal/properties/name"
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "link": {
                  "type": "string"
                }
              },
              "required": ["name", "link"],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "title",
          "company",
          "location",
          "from",
          "description",
          "technologies"
        ],
        "additionalProperties": false
      }
    },
    "educations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {
            "$ref": "#/properties/personal/properties/name"
          },
          "institution": {
            "type": "object",
            "properties": {
              "name": {
                "$ref": "#/properties/personal/properties/name"
              },
              "link": {
                "type": "string"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          "location": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "end": {
            "type": "string"
          },
          "note": {
            "$ref": "#/properties/personal/properties/name"
          }
        },
        "required": ["degree", "institution", "location", "from"],
        "additionalProperties": false
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "link": {
            "type": "string"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    "hobbies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/properties/personal/properties/name"
          },
          "link": {
            "type": "string"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["personal", "workExperience", "educations", "skills", "hobbies"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
